<h1>Inventory</h1>

<table>
  <tr>
    <th>Inventory of albums and artists</th>
  </tr>
  <% for album in @albums %>
  <tr>
    <td>Artist: <a href="/artists/<%= album.artist_id %>"> <%= album.artist.name%></a> Album: <a href="/albums/<%= album.id %>"><%= album.name %><a/></td>
  </tr>
  <tr>
    <td>Quantity: <%= album.stock_level %></td>
  </tr>
  <% end %>
</table>
